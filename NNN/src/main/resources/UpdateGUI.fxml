<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.UserControllers.UpdateController">
    <center>
        <VBox prefHeight="614.0" prefWidth="988.0" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="errorText" strokeType="OUTSIDE" strokeWidth="0.0" text="Profile Settings">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Profile Settings">
                    <VBox.margin>
                        <Insets left="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="Comic Sans MS" size="31.0" />
                    </font>
                </Text>
                </Text>
                <ImageView fx:id="userImageView" disable="true" fitHeight="3.0" fitWidth="147.0" opacity="0.0" pickOnBounds="true" preserveRatio="true" styleClass="circular-image-view">
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </ImageView>
                <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="164.0" text="Profile details">
                    <VBox.margin>
                        <Insets left="10.0" top="50.0" />
                    </VBox.margin>
                    <font>
                        <Font size="22.0" />
                    </font>
                </Label>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="355.0" prefWidth="488.0" spacing="10.0">
                    <VBox.margin>
                        <Insets left="20.0" />
                    </VBox.margin>
                    <children>
                        <ImageView fx:id="userImageView1" fitHeight="100.0" fitWidth="122.0" pickOnBounds="true" />
                        <Button fx:id="chooseImageButton" text="Choose Image" />
                        <TextField fx:id="nomq" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="27.0" prefWidth="355.0" promptText="Nom" styleClass="input" stylesheets="@style/login.css">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </VBox.margin>
                        </TextField>
                        <TextField fx:id="prenomq" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="25.0" prefWidth="354.0" promptText="Prenom" styleClass="input" stylesheets="@style/login.css">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="modifier" mnemonicParsing="false" onAction="#handleUpdateButton" text="update" />
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>
</BorderPane>
