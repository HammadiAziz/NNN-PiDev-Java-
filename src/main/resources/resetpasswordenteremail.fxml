<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="404.0" prefWidth="676.0" styleClass="nav-form" stylesheets="@style/dashboardDesign.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.UserControllers.ResetPassController">
    <children>
        <AnchorPane layoutX="-8.0" layoutY="-3.0" prefHeight="416.0" prefWidth="686.0" styleClass="nav-form" stylesheets="@style/dashboardDesign.css">
            <children>
                <ImageView fitHeight="352.0" fitWidth="336.0" layoutX="327.0" layoutY="58.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/logo/logo.png" />
                    </image>
                </ImageView>
                <Button layoutX="17.0" layoutY="196.0" mnemonicParsing="false" onAction="#handleButton" prefHeight="28.0" prefWidth="79.0" style="-fx-background-color: #0D98Ba;" text="Next" textFill="WHITE">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Button>
                <Label layoutX="22.0" layoutY="72.0" prefHeight="52.0" prefWidth="318.0" text="Looks like you forgot your password." textFill="WHITE">
                    <font>
                        <Font name="Barlow Condensed Black Italic" size="17.0" />
                    </font>
                </Label>


                <ProgressIndicator fx:id="loadingindicator" layoutX="327.0" layoutY="7.0" progress="0.0" />
                <TextField fx:id="emailField" layoutX="17.0" layoutY="158.0" prefHeight="26.0" prefWidth="187.0" />
                <Label layoutX="19.0" layoutY="98.0" prefHeight="67.0" prefWidth="358.0" text="To reset it, just enter your email address below," textFill="WHITE">
                    <font>
                        <Font name="Barlow Condensed Black Italic" size="17.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <ImageView fitHeight="52.0" fitWidth="51.0" layoutX="5.0" layoutY="4.0" onMouseClicked="#NavToLogin" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/back.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
